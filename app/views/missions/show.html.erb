<h1 class="text-center text-dark"><%= @mission.title %></h1>
<div class="row justify-content-end">
  <div class="col-3">
    <%= link_to "Back To List", missions_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <p>任務內容：</p>
    <p><%= @mission.description %></p>
  </div>
</div>
<div class="row justify-content-end">
  <div class="col-2">
    <p>Start time</p>
    <%= @mission.started_at.strftime("%Y-%m-%d") %>
  </div>
  <div class="col-2">
    <p>Finish time:</p>
    <%= @mission.finished_at.strftime("%Y-%m-%d") %>
  </div>
</div>